<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" rel="stylesheet">
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="/static/css/style.css">
  <!--[if lt IE 9]>
  <script src="//oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
  <script src="//oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
  <title>Movie Alteration</title>
</head>
<body class="myBackground2">
  <div class="container-fluid">
    <h2>Alter Movie</h2>
    <form action="http://localhost:3000/movie/edit/<%= id %>" method="POST">

      <div class="form-row">

        <div class="col-xs-3">
          <label for="title" class="control-label">Title</label>
          <input id="place1" type="text" class="form-control" placeholder="Title" name="title" required value="<%= data.title %>">
        </div>

        <div class="col-xs-5">
          <label for="description" class="control-label">Description</label>
          <input id="place2" type="text" class="form-control" placeholder="Description" name="description" required value="<%= data.description %>">
        </div>

        <div class="col-xs-4">
          <label for="type" class="control-label">Type</label>
          <input id="place3" type="text" class="form-control" placeholder="Type" name="type" required value="<%= data.type %>">
        </div>

      </div>
      <div class="form-row">

        <div class="form-row">
          <div class="dropdown col-xs-2">
            <label for="classification" class="control-label">Classification</label>
            <select class="form-select form-select-lg mb-3 form-control" name="classification" id="place4" required>
              <option selected value="<%= data.classification %>"><%= data.classification %></option>
              <option id="opt1" value="L">L</option>
              <option id="opt2" value="10">10</option>
              <option id="opt3" value="12">12</option>
              <option id="opt4" value="14">14</option>
              <option id="opt5" value="16">16</option>
              <option id="opt6" value="18">18</option>
            </select>
          </div>

      </div>
      <div class="form-row">
        <div class="col-xs-12">
          <br />
          <button class="btn btn-primary" type="submit" onclick="edit()">Edit</button>
          <button class="btn btn-danger"><a href="/movies" style="text-decoration: none; color: white;">Cancel</a></button>
          <div id="sucess" class="alert alert-success" role="alert" style="padding: 5px; margin-top: 5rem ; margin-bottom: 0px; text-align: center; display: none;">
            Changes done !
          </div>
        </div>
      </div>
    </form>
  </div>
  <script>
    function edit() {
      let place = document.getElementById("place1")
      for (var i = 1, c = 0; i <= 4; i++) {
        let place = document.getElementById(`place${i}`) 
        if (place.value != '' ) {
            c++
        }
      }
      
      if (c === 4) {
        sucess.style.display = "block"
        setTimeout(() => sucess.style.display = "none", 1000)
      }
    }
  </script>
</body>
</html>